@model ReservationViewModel

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom mb-3 p-3">
                    <h3 class="text-info">Add Payment Date</h3>
                </div>
                <div class="p-3">
                    <form asp-action="AddPaymentDate" method="post">
                        @Html.Hidden("ReservationId", Model.ReservationId)
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating">
                            <input asp-for="Brand" class="form-control" readonly />
                            <label asp-for="Brand">Brand</label>
                            <span asp-validation-for="Brand" class="text-danger"></span><br />
                        </div>

                        <div class="form-floating">
                            <input asp-for="CarModel" class="form-control" readonly />
                            <label asp-for="CarModel">Model</label>
                            <span asp-validation-for="CarModel" class="text-danger"></span><br />
                        </div>

                        <div class="form-floating">
                            <input asp-for="StartDateString" class="form-control" readonly />
                            <label asp-for="StartDateString">Reservation Start Date</label>
                            <span asp-validation-for="StartDateString" class="text-danger"></span><br />
                        </div>

                        <div class="form-floating">
                            <input asp-for="EndDateString" class="form-control" readonly />
                            <label asp-for="EndDateString">Reservation End Date</label>
                            <span asp-validation-for="EndDateString" class="text-danger"></span><br />
                        </div>

                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" readonly />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span><br />
                        </div>

                        <div class="form-floating">
                            <input asp-for="Amount" class="form-control" readonly />
                            <label asp-for="Amount">Total Amount (EUR)</label>
                            <span asp-validation-for="Amount" class="text-danger"></span><br />
                        </div>

                        <div class="form-floating">
                            <input asp-for="PaymentDate" class="form-control" type="datetime-local" value="" />
                            <label asp-for="PaymentDate">Payment Date</label>
                            <span asp-validation-for="PaymentDate" class="text-danger"></span><br />
                        </div>

                        <input class="btn btn-outline-primary" type="submit" value="Submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>