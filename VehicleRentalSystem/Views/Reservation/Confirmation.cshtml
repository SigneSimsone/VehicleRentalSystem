@model ReservationViewModel

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom mb-3 p-3">
                    <h2 class="text-info">Information about the Reservation and the Payment</h2>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="p-3">
                    <form action="/Reservation/Confirmation" method="post" autocomplete="off">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <label asp-for="Brand">Brand</label>
                        <input asp-for="Brand" class="form-control readonly" />
                        <span asp-validation-for="Brand" class="text-danger"></span><br />

                        <label asp-for="CarModel">Model</label>
                        <input asp-for="CarModel" class="form-control readonly" />
                        <span asp-validation-for="CarModel" class="text-danger"></span><br />

                        <label asp-for="FuelType">Fuel Type</label>
                        <input asp-for="FuelType" class="form-control readonly" />
                        <span asp-validation-for="FuelType" class="text-danger"></span><br />

                        <label asp-for="GearboxType">Gearbox Type</label>
                        <input asp-for="GearboxType" class="form-control readonly" />
                        <span asp-validation-for="GearboxType" class="text-danger"></span><br />

                        <label asp-for="Location">Location</label>
                        <input asp-for="Location" class="form-control readonly" />
                        <span asp-validation-for="Location" class="text-danger"></span><br />

                        <label asp-for="DailyPrice">Daily Price</label>
                        <input asp-for="DailyPrice" class="form-control readonly" />
                        <span asp-validation-for="DailyPrice" class="text-danger"></span><br />

                        <label asp-for="StartDate">Reservation start date</label>
                        <input asp-for="StartDate" class="form-control readonly" />
                        <span asp-validation-for="StartDate" class="text-danger"></span><br />

                        <label asp-for="EndDate">Reservation end date</label>
                        <input asp-for="EndDate" class="form-control readonly" />
                        <span asp-validation-for="EndDate" class="text-danger"></span><br />

                        <label asp-for="Amount">Total Amount</label>
                        <input asp-for="Amount" class="form-control readonly" />
                        <span asp-validation-for="Amount" class="text-danger"></span><br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>