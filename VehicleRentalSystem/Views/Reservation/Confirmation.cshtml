@model ReservationViewModel

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom mb-3 p-3">
                    <h3 class="text-info">Reservation Information</h3>
                </div>
                <div class="text-center">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <p><strong>@Model.SuccessMessage </strong></p>
                    }
                </div>
                <div class="p-3">
                    <form action="/Reservation/Confirmation" method="post" autocomplete="off">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating">
                        <input asp-for="Name" class="form-control" readonly />
                        <label asp-for="Name">Name</label>
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="Surname" class="form-control" readonly />
                        <label asp-for="Surname">Surname</label>
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="Email" class="form-control" readonly />
                        <label asp-for="Email">E-mail Address</label>
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="PhoneNr" class="form-control" readonly />
                        <label asp-for="PhoneNr">Phone Number</label><br />
                        </div>

                        <div class="form-floating">
                        <input asp-for="Brand" class="form-control" readonly />
                        <label asp-for="Brand">Brand</label>
                        </div>

                        <div class="form-floating">
                        <input asp-for="CarModel" class="form-control" readonly />
                        <label asp-for="CarModel">Model</label>
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="FuelType" class="form-control" readonly />
                        <label asp-for="FuelType">Fuel Type</label>
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="GearboxType" class="form-control" readonly />
                        <label asp-for="GearboxType">Gearbox Type</label>
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="Location" class="form-control" readonly />
                        <label asp-for="Location">Location</label>
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="DailyPrice" class="form-control" readonly />
                        <label asp-for="DailyPrice">Daily Price (EUR)</label><br />
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="StartDateString" class="form-control" readonly />
                        <label asp-for="StartDateString">Reservation Start Date</label>
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="EndDateString" class="form-control" readonly />
                        <label asp-for="EndDateString">Reservation End Date</label>
                        </div>
                        
                        <div class="form-floating">
                        <input asp-for="Amount" class="form-control" readonly />
                        <label asp-for="Amount">Total Amount (EUR)</label><br />
                        </div>
                                                                                        
                        @if (string.IsNullOrEmpty(Model.PaymentDateString))
                        {
                            <p><b>Payment has not been made.</b></p>
                            <p><b>Pay at the car location or make a transaction:</b><br />
                               A/S "VehicleRental"<br />
                               Reg. Nr. LV12345678912<br />
                               IBAN: LV52UNLA1234567891234<br />
                               AS "SEB banka"</p>
                        }
                        else
                        {
                            <div class="form-floating">
                            <input asp-for="PaymentDateString" class="form-control" readonly />
                            <label asp-for="PaymentDateString">Payment Date</label><br /> 
                            </div> 
                        }                                                                 
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>