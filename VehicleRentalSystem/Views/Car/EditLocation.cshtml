@model CarPropertiesViewModel

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom mb-3 p-3">
                    <h3 class="text-info">Edit Location</h3>
                </div>
                <div class="p-3">
                    <form asp-action="EditLocation" method="post" enctype="multipart/form-data">
                        @Html.Hidden("LocationId", Model.LocationId)
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="City" class="form-control" />
                            <label asp-for="City">City</label>
                            <span asp-validation-for="City" class="text-danger"></span><br />
                        </div>

                        <div class="form-floating">
                            <input asp-for="Street" class="form-control" />
                            <label asp-for="Street">Street</label>
                            <span asp-validation-for="Street" class="text-danger"></span><br />
                        </div>

                        <div class="form-floating">
                            <input asp-for="Number" class="form-control" />
                            <label asp-for="Number">Number</label>
                            <span asp-validation-for="Number" class="text-danger"></span><br />
                        </div>
                        <input class="btn btn-outline-primary" type="submit" value="Submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>