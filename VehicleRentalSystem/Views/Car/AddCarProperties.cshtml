@model CarPropertiesViewModel

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom mb-3 p-3">
                    <h3 class="text-info">New Brand</h3>
                </div>
                <div class="p-3">
                    <form asp-action="AddBrand" method="post">
                        <div class="form-floating">
                        <input asp-for="Brand" class="form-control" autocomplete="off" />
                        <label asp-for="Brand">New Brand</label>
                        <span asp-validation-for="Brand" class="text-danger"></span><br />
                        </div>
                        <input class="btn btn-outline-primary" type="submit" value="Submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
