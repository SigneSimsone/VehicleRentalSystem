@model CarPropertiesViewModel

<form asp-action="OpenAddCarProperties" method="get">
    <input type="submit" value="Add Car Properties" />
</form>
<br />

<div>
    @Html.ValidationMessage("NoBrandsAdded")
    @Html.ValidationMessage("NoModelsAdded")
    @Html.ValidationMessage("NoFuelTypesAdded")
    @Html.ValidationMessage("NoGearboxTypesAdded")
    @Html.ValidationMessage("NoLocationsAdded")
</div>

@if (Model != null && Model.Brands != null && Model.Brands.Any())
{
    <h3 id="brands">Brands</h3>
    <table id="BrandsTable">
        <thead id="thead">
            <tr>
                <th>Brand</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tbody">
            @foreach (var brand in Model.Brands.OrderBy(r => r.Brand))
            {
                <tr>
                    <td>@brand.Brand</td>
                    <td>
                        <form asp-action="EditBrand" method="get">
                            <input type="submit" value="Edit" />
                            @Html.Hidden("BrandId", brand.Id)
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteBrand" method="post">
                            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete?')" />
                            @Html.Hidden("BrandId", brand.Id)
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<br />
