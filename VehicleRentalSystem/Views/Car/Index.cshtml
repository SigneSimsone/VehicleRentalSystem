@model CarViewModel

<h5>Add new information for cars:</h5>
<form asp-action="AddBrand" method="post">
    <label for="new-brand">Brand:</label>
    <input type="text" id="new-brand" name="brand" />
    <input type="submit" value="Submit" />
</form>
<br />
<form asp-action="AddCarModel" method="post">
    <label for="new-car-model">Car model:</label>
    <input type="text" id="new-car-model" name="carModel" />
    <input type="submit" value="Submit" />
</form>
<br />
<form asp-action="AddFuelType" method="post">
    <label for="new-fuel-type">Fuel type:</label>
    <input type="text" id="new-fuel-type" name="fuelType" />
    <input type="submit" value="Submit" />
</form>
<br />
<form asp-action="AddGearboxType" method="post">
    <label for="new-gearbox-type">Gearbox type:</label>
    <input type="text" id="new-gearbox-type" name="gearboxType" />
    <input type="submit" value="Submit" />
</form>
<br />
<form asp-action="AddLocation" method="post">
    <label for="new-location">Location:</label>
    <input type="text" id="new-city" name="city" />
    <input type="text" id="new-street" name="street" />
    <input type="text" id="new-number" name="number" />
    <input type="submit" value="Submit" />
</form>
<br />

<h5>Add a car:</h5>
<form asp-action="AddCar" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <label asp-for="SelectedBrand">Brand</label>
    <select asp-for="SelectedBrand" asp-items="Model.BrandDropdown" class="form-control">
        <option value="">Select brand</option>
    </select>
    <span asp-validation-for="SelectedBrand" class="text-danger"></span><br />

    <label asp-for="SelectedCarModel">Model</label>
    <select asp-for="SelectedCarModel" asp-items="Model.CarModelDropdown" class="form-control">
        <option value="">Select model</option>
    </select>
    <span asp-validation-for="SelectedCarModel" class="text-danger"></span><br />

    <label asp-for="SelectedGearboxType">Gearbox type</label>
    <select asp-for="SelectedGearboxType" asp-items="Model.GearboxTypeDropdown" class="form-control">
        <option value="">Select gearbox type</option>
    </select>
    <span asp-validation-for="SelectedGearboxType" class="text-danger"></span><br />

    <label asp-for="SelectedFuelType">Fuel type</label>
    <select asp-for="SelectedFuelType" asp-items="Model.FuelTypeDropdown" class="form-control">
        <option value="">Select fuel type</option>
    </select>
    <span asp-validation-for="SelectedFuelType" class="text-danger"></span><br />

    <label asp-for="SelectedLocation">Location</label>
    <select asp-for="SelectedLocation" asp-items="Model.LocationDropdown" class="form-control">
        <option value="">Select location</option>
    </select>
    <span asp-validation-for="SelectedLocation" class="text-danger"></span><br />

    <label asp-for="Year">Year</label>
    <input asp-for="Year" class="form-control" />

    <label asp-for="RegistrationNumber">Registration Number</label>
    <input asp-for="RegistrationNumber" class="form-control" />

    <label asp-for="FuelConsumption">Fuel Consumption</label>
    <input asp-for="FuelConsumption" class="form-control" />

    <label asp-for="Mileage">Mileage</label>
    <input asp-for="Mileage" class="form-control" />

    <label asp-for="Passengers">Passengers</label>
    <input asp-for="Passengers" class="form-control" />

    <label asp-for="Luggage">Luggage</label>
    <input asp-for="Luggage" class="form-control" />

    <label asp-for="Doors">Doors</label>
    <input asp-for="Doors" class="form-control" />
    <span asp-validation-for="Doors" class="text-danger"></span><br />

    <label asp-for="AirConditioner">Air Conditioner</label>
    @Html.CheckBoxFor(t=>t.AirConditioner) <br />

    <label asp-for="DailyPrice">Daily Price</label>
    <input asp-for="DailyPrice" class="form-control" />
    <span asp-validation-for="DailyPrice" class="text-danger"></span><br />

    <label asp-for="Availability">Availability</label>
    @Html.CheckBoxFor(t=>t.Availability) <br />

    <label asp-for="File">File</label>
    <input asp-for="File" class="form-control" />
    <br />
    <input type="submit" value="Submit" />
</form>
<br />

@if (Model != null && Model.Cars != null && Model.Cars.Any())
{
    <h2 id="cars">Cars</h2>
    <table id="CarsTable">
        <thead id="thead">
            <tr>
                <th>Brand</th>
                <th>Model</th>
                <th>Image</th>
                <th>Open</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody id="tbody">
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.Brand.Brand</td>
                    <td>@car.Model.Model</td>
                    <td><img src="@car.ImagePath" width="200"></td>
                    <td>
                        <form asp-action="OpenCar" method="get">
                            <input type="submit" value="Open" />
                            @Html.Hidden("CarId", car.Id)
                        </form>
                    </td>
                    <td>
                        <form asp-action="Edit" method="get">
                            <input type="submit" value="Edit" />
                            @Html.Hidden("CarId", car.Id)
                        </form>
                    </td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input type="submit" value="Delete" />
                            @Html.Hidden("CarId", car.Id)
                            @Html.Hidden("Feedbacks", car.Feedbacks)
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}