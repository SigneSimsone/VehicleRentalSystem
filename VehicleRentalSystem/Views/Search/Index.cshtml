@model SearchViewModel

<h5>Search cars:</h5>
<form asp-controller="Search" asp-action="SearchCars" method="post">

    <label asp-for="SelectedBrand">Brand</label>
    <select asp-for="SelectedBrand" asp-items="Model.BrandDropdown" class="form-control">
        <option value="">Select brand</option>
    </select>

    <label asp-for="SelectedGearboxType">Gearbox type</label>
    <select asp-for="SelectedGearboxType" asp-items="Model.GearboxTypeDropdown" class="form-control">
        <option value="">Select gearbox type</option>
    </select>

    <label asp-for="SelectedFuelType">Fuel type</label>
    <select asp-for="SelectedFuelType" asp-items="Model.FuelTypeDropdown" class="form-control">
        <option value="">Select fuel type</option>
    </select>

    <label asp-for="SelectedLocation">Location</label>
    <select asp-for="SelectedLocation" asp-items="Model.LocationDropdown" class="form-control">
        <option value="">Select location</option>
    </select>

    <label asp-for="Year">Year</label>
    <input asp-for="Year" class="form-control" />

    <label asp-for="FuelConsumption">Fuel Consumption</label>
    <input asp-for="FuelConsumption" class="form-control" />

    <label asp-for="Mileage">Mileage</label>
    <input asp-for="Mileage" class="form-control" />

    <label asp-for="Passengers">Passengers</label>
    <input asp-for="Passengers" class="form-control" />

    <label asp-for="DailyPrice">Daily Price</label>
    <input asp-for="DailyPrice" class="form-control" />
    <span asp-validation-for="DailyPrice" class="text-danger"></span><br />

    <div class="mb-3 row">
        <label class="col-3 col-form-label text-info">Start date</label>
        <div class="col-9">
            @Html.TextBoxFor(m => m.StartDate, new { @case = "form-control", placeholder = "Reservation start date", type = "datetime-local"})
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-3 col-form-label text-info">End date</label>
        <div class="col-9">
            @Html.TextBoxFor(m => m.EndDate, new { @case = "form-control", placeholder = "Reservation end date", type = "datetime-local"})
        </div>
    </div>

    <input type="submit" value="Submit" />
</form>